generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
      
model Message {
  id      String @id @default(uuid())
  role    String
  content String
}

model ChatHistory {
  id          String    @id @default(uuid())
  task        String
  tone        String
  selection   String
  messages    Message[]
  modelId     String
  temperature Float
}

model Doc {
  id        String       @id @default(uuid())
  title     String
  prompt    String
  data      String
  history   ChatHistory[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model Action {
  id     String @id @default(uuid())
  name   String
  prompt String
}

model Setting {
  id            String   @id @default(uuid())
  modelId       String
  temperature   Float
  apiKey        String
  globalPrompt  String
  actionPrompts Action[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}